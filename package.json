{
  "name": "throw-utils",
  "version": "1.0.0",
  "description": "Helpers for error throwing",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/throw-utils.git"
  },
  "main": "./index.js",
  "exports": {
    ".": "./index.js",
    "./esm": "./index.mjs"
  },
  "scripts": {
    "code": "eslint .",
    "test": "tape test.js",
    "docs": "md-magic README.md",
    "docs:commit": "git add -A README.md && (git diff-index --quiet HEAD -- README.md || git commit -m'docs' --no-verify)",
    "ci": "run-s code test",
    "prerelease": "run-s code test docs docs:commit",
    "postrelease": "git push --follow-tags --no-verify",
    "release": "npm version $VER && npm publish --access public",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm t",
      "pre-push": "npm t"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.0.9",
    "jsdoc-to-markdown": "^5.0.3",
    "lint-staged": "^9.5.0",
    "markdown-magic": "^1.0.0",
    "npm-run-all": "^4.1.3",
    "tape": "^4.13.0"
  },
  "license": "MIT"
}
